{
    "name": "jtl-scx/api-base-client",
    "type": "library",
    "description": "SCX-API Base Client",
    "license": "MIT",
    "require": {
        "php": "8.0.*|8.1.*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/uri-template": "^0.2.0 || ^1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15 || ^3.0",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^9.0",
        "psalm/phar": "^4.17"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTL\\SCX\\Client\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
