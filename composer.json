{
    "name": "jtl/scx-api-client",
    "type": "library",
    "description": "SCX-Client Base",
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^8.3",
        "mockery/mockery": "^1.2",
        "guzzlehttp/guzzle": "^6.3"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Require this for making HTTP calls"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTL\\SCX\\Client\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
